@page
@model UniPortal.Pages.Academics.ClassroomModel
@{
    ViewData["Title"] = "Classroom Management";
    Layout = "_AdminLayout";
}

<div class="container my-4">
    <h2 class="mb-4">🏫 Classroom Management</h2>

    <!-- Search Box -->
    <form method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search by room name..." />
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    <!-- Add New Classroom -->
    <form method="post">
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Room Name</th>
                    <th>Capacity</th>
                    <th>Location</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>New</td>
                    <td><input asp-for="NewClassroom.RoomName" class="form-control" required /></td>
                    <td><input asp-for="NewClassroom.Capacity" type="number" class="form-control" required /></td>
                    <td><input asp-for="NewClassroom.Location" type="text" class="form-control" required /></td>
                    <td>
                        <button type="submit" asp-page-handler="Create" class="btn btn-success btn-sm">Add</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>

    <!-- Existing Classrooms Table -->
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>Room Name</th>
                <th>Capacity</th>
                <th>Location</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model.Classrooms)
            {
                <tr>
                    <form method="post">
                        <input type="hidden" name="id" value="@room.Id" />

                        @if (Model.EditClassroomId == room.Id.ToString())
                        {
                            <!-- Editing Row -->
                        <td><input name="EditClassroom.RoomName" value="@Model.EditClassroom.RoomName" class="form-control" /></td>
                        <td><input name="EditClassroom.Capacity" type="number" value="@Model.EditClassroom.Capacity" class="form-control" /></td>
                        <td><input name="EditClassroom.Location" type="text" value="@Model.EditClassroom.Location" class="form-control" /></td>
                        <td>
                            <button type="submit" asp-page-handler="SaveEdit" class="btn btn-sm btn-primary">💾 Save</button>
                            <button type="submit" asp-page-handler="CancelEdit" class="btn btn-sm btn-secondary">❌ Cancel</button>
                        </td>
                    }
                    else
                    {
                        <!-- Normal Row -->
                        <td>@room.RoomName</td>
                        <td>@room.Capacity</td>
                        <td>@room.Location</td>
                        <td>
                            <button type="submit" asp-page-handler="Edit" name="id" value="@room.Id" class="btn btn-sm btn-warning">Edit</button>
                            @if (!room.IsDeleted)
                            {
                                <button type="submit" asp-page-handler="Delete" name="id" value="@room.Id" class="btn btn-sm btn-danger">Delete</button>
                            }
                            else
                            {
                                <button type="submit" asp-page-handler="Activate" name="id" value="@room.Id" class="btn btn-sm btn-success">Activate</button>
                            }
                        </td>
                    }
                    </form>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination -->
    <nav>
        <ul class="pagination">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="?CurrentPage=@(Model.CurrentPage - 1)&SearchTerm=@Model.SearchTerm">Previous</a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="?CurrentPage=@i&SearchTerm=@Model.SearchTerm">@i</a>
                </li>
            }
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="?CurrentPage=@(Model.CurrentPage + 1)&SearchTerm=@Model.SearchTerm">Next</a>
            </li>
        </ul>
    </nav>
</div>
