@page
@model UniPortal.Pages.Academics.SemesterModel
@{
    ViewData["Title"] = "Semester Management";
    Layout = "_AdminLayout";
}

<div class="container my-4">
    <h2 class="mb-4">📅 Semester Management</h2>

    <!-- Search Box -->
    <form method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search by semester name..." />
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    <!-- Add New Semester -->
    <form method="post">
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>New</td>
                    <td><input asp-for="NewSemester.Name" class="form-control" required /></td>
                    <td><input asp-for="NewSemester.StartDate" type="date" class="form-control" required /></td>
                    <td><input asp-for="NewSemester.EndDate" type="date" class="form-control" required /></td>
                    <td>
                        <button type="submit" asp-page-handler="Create" class="btn btn-success btn-sm">Add</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>

    <!-- Existing Semesters -->
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Start</th>
                <th>End</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sem in Model.Semesters)
            {
                <tr>
                    <form method="post">
                        <input type="hidden" name="id" value="@sem.Id" />

                        @if (Model.EditSemesterId == sem.Id.ToString())
                        {
                            <!-- Editing Row -->
                        <td><input name="EditSemester.Name" value="@Model.EditSemester.Name" class="form-control" /></td>
                        <td><input name="EditSemester.StartDate" type="date" value="@Model.EditSemester.StartDate.ToString("yyyy-MM-dd")" class="form-control" /></td>
                        <td><input name="EditSemester.EndDate" type="date" value="@Model.EditSemester.EndDate.ToString("yyyy-MM-dd")" class="form-control" /></td>
                        <td>
                            <button type="submit" asp-page-handler="SaveEdit" class="btn btn-sm btn-primary">💾 Save</button>
                            <button type="submit" asp-page-handler="CancelEdit" class="btn btn-sm btn-secondary">❌ Cancel</button>
                        </td>
                    }
                    else
                    {
                        <!-- Normal Row -->
                        <td>@sem.Name</td>
                        <td>@sem.StartDate.ToString("yyyy-MM-dd")</td>
                        <td>@sem.EndDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            <button type="submit" asp-page-handler="Edit" name="id" value="@sem.Id" class="btn btn-sm btn-warning">Edit</button>
                            @if (!sem.IsDeleted)
                            {
                                <button type="submit" asp-page-handler="Delete" name="id" value="@sem.Id" class="btn btn-sm btn-danger">Delete</button>
                            }
                            else
                            {
                                <button type="submit" asp-page-handler="Activate" name="id" value="@sem.Id" class="btn btn-sm btn-success">Activate</button>
                            }
                        </td>
                    }
                    </form>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination -->
    <nav>
        <ul class="pagination">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="?CurrentPage=@(Model.CurrentPage - 1)&SearchTerm=@Model.SearchTerm">Previous</a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="?CurrentPage=@i&SearchTerm=@Model.SearchTerm">@i</a>
                </li>
            }
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="?CurrentPage=@(Model.CurrentPage + 1)&SearchTerm=@Model.SearchTerm">Next</a>
            </li>
        </ul>
    </nav>
</div>
