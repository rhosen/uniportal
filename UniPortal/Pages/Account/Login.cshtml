@page
@model UniPortal.Pages.Account.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow-lg rounded-4 p-4" style="width: 400px;">
        <div class="text-center mb-4">
            <h2 class="fw-bold">Welcome Back</h2>
            <p class="text-muted small">Sign in to your UniPortal account</p>
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post">
            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label fw-semibold"></label>
                <input asp-for="Input.Email" class="form-control form-control-lg rounded-3" placeholder="Enter your email" />
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label fw-semibold"></label>
                <input asp-for="Input.Password" type="password" class="form-control form-control-lg rounded-3" placeholder="Enter your password" />
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="Input.RememberMe" class="form-check-input" />
                <label asp-for="Input.RememberMe" class="form-check-label small">Remember Me</label>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 fw-bold" style="background: linear-gradient(135deg, #4f46e5, #6366f1); border: none;">
                Login
            </button>

            <div class="mt-3 text-center">
                <span class="text-muted small">Don't have an account? <a asp-page="/Account/Register" class="text-decoration-none fw-semibold">Register</a></span>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
