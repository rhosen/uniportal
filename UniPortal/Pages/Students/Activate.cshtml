@page
@model UniPortal.Pages.Students.ActivateModel
@{
    ViewData["Title"] = "Activate Students";
    Layout = "_AdminLayout";
}

<div class="container my-4">
    <h2 class="mb-4">🧑‍🎓 New Students</h2>

    <!-- Search Box -->
    <form method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search by name or email..." />
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    @if (!Model.InactiveStudents.Any())
    {
        <p class="text-muted">No pending students for activation.</p>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Email</th>
                    <th>Signup Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model.InactiveStudents)
                {
                    <tr>
                        <td>@student.Email</td>
                        <td>@student.CreatedAt.ToString("yyyy-MM-dd")</td>
                        <td>
                            <div class="d-flex gap-2">
                                <!-- Activate Account -->
                                <form method="post" asp-page-handler="Activate">
                                    <input type="hidden" name="AccountId" value="@student.Id" />
                                    <button type="submit" class="btn btn-sm btn-success">✅ Activate</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Pagination -->
        <nav>
            <ul class="pagination">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="?CurrentPage=@(Model.CurrentPage - 1)&SearchTerm=@Model.SearchTerm">Previous</a>
                </li>
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" href="?CurrentPage=@i&SearchTerm=@Model.SearchTerm">@i</a>
                    </li>
                }
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="?CurrentPage=@(Model.CurrentPage + 1)&SearchTerm=@Model.SearchTerm">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>
