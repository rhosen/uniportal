@page
@model UniPortal.Pages.Admin.ClassScheduleModel
@{
    ViewData["Title"] = "Class Schedule Management";
    Layout = "_AdminLayout";
}

<div class="container my-4">
    <h2 class="mb-4">📅 Class Schedule Management</h2>

    <!-- Search Box -->
    <form method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search by subject name, code, or teacher..." />
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    <!-- Add New Schedule -->
    <form method="post">
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Course</th>
                    <th>Classroom</th>
                    <th>Day</th>
                    <th>Start</th>
                    <th>End</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <select asp-for="NewSchedule.CourseId" class="form-select" required>
                            <option value="">-- Select Course --</option>
                            @foreach (var course in Model.Courses)
                            {
                                <option value="@course.Id">
                                    @course.Department.Code · @course.Subject.Name (@course.Subject.Code) · @course.Semester.Name · @course.Teacher.FirstName @course.Teacher.LastName
                                </option>
                            }
                        </select>
                    </td>
                    <td>
                        <select asp-for="NewSchedule.ClassroomId" class="form-select" required>
                            <option value="">-- Select Classroom --</option>
                            @foreach (var room in Model.Classrooms)
                            {
                                <option value="@room.Id">@room.RoomName</option>
                            }
                        </select>
                    </td>
                    <td>
                        <select asp-for="NewSchedule.DayOfWeek" class="form-select" required>
                            <option value="1">Monday</option>
                            <option value="2">Tuesday</option>
                            <option value="3">Wednesday</option>
                            <option value="4">Thursday</option>
                            <option value="5">Friday</option>
                            <option value="6">Saturday</option>
                            <option value="7">Sunday</option>
                        </select>
                    </td>
                    <td><input asp-for="NewSchedule.StartTime" type="time" class="form-control" required /></td>
                    <td><input asp-for="NewSchedule.EndTime" type="time" class="form-control" required /></td>
                    <td>
                        <button type="submit" asp-page-handler="Create" class="btn btn-success btn-sm">Add</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>

    <!-- Existing Schedules -->
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>Course</th>
                <th>Classroom</th>
                <th>Day</th>
                <th>Time</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sched in Model.Schedules)
            {
                <tr>
                    <form method="post">
                        <input type="hidden" name="id" value="@sched.Id" />

                        @if (Model.EditScheduleId == sched.Id.ToString())
                        {
                            <!-- Editing Row -->
                        <td>
                            <select name="EditSchedule.CourseId" class="form-select">
                                @foreach (var course in Model.Courses)
                                {
                                    <option value="@course.Id" selected="@(course.Id == Model.EditSchedule.CourseId ? "selected" : null)">
                                        @course.Department.Code · @course.Subject.Name (@course.Subject.Code) · @course.Semester.Name · @course.Teacher.FirstName @course.Teacher.LastName
                                    </option>
                                }
                            </select>
                        </td>
                        <td>
                            <select name="EditSchedule.ClassroomId" class="form-select">
                                @foreach (var room in Model.Classrooms)
                                {
                                    <option value="@room.Id" selected="@(room.Id == Model.EditSchedule.ClassroomId ? "selected" : null)">
                                        @room.RoomName
                                    </option>
                                }
                            </select>
                        </td>
                        <td>
                            <select name="EditSchedule.DayOfWeek" class="form-select">
                                @for (int i = 1; i <= 7; i++)
                                {
                                    <option value="@i" selected="@(i == Model.EditSchedule.DayOfWeek ? "selected" : null)">
                                        @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.DayNames[i - 1]
                                    </option>
                                }
                            </select>
                        </td>
                        <td>
                            <input name="EditSchedule.StartTime" value="@Model.EditSchedule.StartTime" type="time" class="form-control" />
                            <input name="EditSchedule.EndTime" value="@Model.EditSchedule.EndTime" type="time" class="form-control mt-1" />
                        </td>
                        <td>
                            <button type="submit" asp-page-handler="SaveEdit" class="btn btn-sm btn-primary">💾 Save</button>
                            <button type="submit" asp-page-handler="CancelEdit" class="btn btn-sm btn-secondary">❌ Cancel</button>
                        </td>
                    }
                    else
                    {
                        <!-- Normal Row -->
                        <td>@sched.Course.Department.Code · @sched.Course.Subject.Name (@sched.Course.Subject.Code) · @sched.Course.Semester.Name · @sched.Course.Teacher.FirstName @sched.Course.Teacher.LastName</td>
                        <td>@sched.Classroom.RoomName</td>
                        <td>@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.DayNames[sched.DayOfWeek - 1]</td>
                        <td>@sched.StartTime - @sched.EndTime</td>
                        <td>
                            <button type="submit" asp-page-handler="Edit" name="id" value="@sched.Id" class="btn btn-sm btn-warning">Edit</button>
                            <button type="submit" asp-page-handler="Delete" name="id" value="@sched.Id" class="btn btn-sm btn-danger">Delete</button>
                        </td>
                    }
                    </form>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination -->
    <nav>
        <ul class="pagination">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="?CurrentPage=@(Model.CurrentPage - 1)&SearchTerm=@Model.SearchTerm">Previous</a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="?CurrentPage=@i&SearchTerm=@Model.SearchTerm">@i</a>
                </li>
            }
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="?CurrentPage=@(Model.CurrentPage + 1)&SearchTerm=@Model.SearchTerm">Next</a>
            </li>
        </ul>
    </nav>
</div>
