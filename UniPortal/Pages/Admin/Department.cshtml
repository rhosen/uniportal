@page
@model UniPortal.Pages.Admin.DepartmentsModel
@{
    ViewData["Title"] = "Department Management";
    Layout = "_AdminLayout";
}

<div class="container my-4">
    <h2 class="mb-4">🏢 Department Management</h2>

    <!-- Search Box -->
    <form method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search by department name..." />
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    <!-- Add New Department -->
    <form method="post">
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Head</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>New</td>
                    <td><input asp-for="NewDepartment.Code" class="form-control" required /></td>
                    <td><input asp-for="NewDepartment.Name" class="form-control" /></td>
                    <td>
                        <select asp-for="NewDepartment.HeadId" class="form-select">
                            <option value="">-- Select Head --</option>
                            @foreach (var teacher in Model.Teachers)
                            {
                                <option value="@teacher.Id">@teacher.FirstName @teacher.LastName</option>
                            }
                        </select>
                    </td>
                    <td>
                        <button type="submit" asp-page-handler="Create" class="btn btn-success btn-sm">Add</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>

    <!-- Existing Departments Table -->
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Head</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dept in Model.Departments)
            {
                <tr>
                    <form method="post">
                        <input type="hidden" name="id" value="@dept.Id" />

                        @if (Model.EditDepartmentId == dept.Id.ToString())
                        {
                            <!-- Editing Row -->
                        <td><input name="EditDepartment.Code" value="@Model.EditDepartment.Code" class="form-control" /></td>
                        <td><input name="EditDepartment.Name" value="@Model.EditDepartment.Name" class="form-control" /></td>
                        <td>
                            <select name="EditDepartment.HeadId" class="form-select">
                                <option value="">-- Select Head --</option>
                                @foreach (var teacher in Model.Teachers)
                                {
                                    <option value="@teacher.Id" selected="@(teacher.Id == Model.EditDepartment.HeadId ? "selected" : null)">
                                        @teacher.FirstName @teacher.LastName
                                    </option>
                                }
                            </select>
                        </td>
                        <td>
                            <button type="submit" asp-page-handler="SaveEdit" class="btn btn-sm btn-primary">💾 Save</button>
                            <button type="submit" asp-page-handler="CancelEdit" class="btn btn-sm btn-secondary">❌ Cancel</button>
                        </td>
                    }
                    else
                    {
                        <!-- Normal Row -->
                        <td>@dept.Code</td>
                        <td>@dept.Name</td>
                        <td>@(dept.Head != null ? $"{dept.Head.FirstName} {dept.Head.LastName}" : "-")</td>
                        <td>
                            <button type="submit" asp-page-handler="Edit" name="id" value="@dept.Id" class="btn btn-sm btn-warning">Edit</button>
                            @if (!dept.IsDeleted)
                            {
                                <button type="submit" asp-page-handler="Delete" name="id" value="@dept.Id" class="btn btn-sm btn-danger">Delete</button>
                            }
                            else
                            {
                                <button type="submit" asp-page-handler="Activate" name="id" value="@dept.Id" class="btn btn-sm btn-success">Activate</button>
                            }
                        </td>
                    }
                    </form>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination -->
    <nav>
        <ul class="pagination">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="?CurrentPage=@(Model.CurrentPage - 1)&SearchTerm=@Model.SearchTerm">Previous</a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="?CurrentPage=@i&SearchTerm=@Model.SearchTerm">@i</a>
                </li>
            }
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="?CurrentPage=@(Model.CurrentPage + 1)&SearchTerm=@Model.SearchTerm">Next</a>
            </li>
        </ul>
    </nav>
</div>
