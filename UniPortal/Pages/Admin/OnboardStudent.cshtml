@page
@model UniPortal.Pages.Admin.OnboardStudentModel
@{
    ViewData["Title"] = "Assign ID";
    Layout = "_AdminLayout";
}

<div class="container my-4">
    <h2 class="mb-4">🆔 Assign Student ID</h2>

    <!-- Search Box -->
    <form method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search by name or email..." />
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    @if (!Model.StudentsWithoutId.Any())
    {
        <p class="text-muted">No students found for assigning ID.</p>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    @* <th>Name</th> *@
                    <th>Email</th>
                    <th>Registered</th>
                    <th>ID</th>
                    <th>Student ID</th>
                    <th>Batch Number</th>
                    <th>Section</th>
                    <th>Department</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model.StudentsWithoutId)
                {
                    <tr>
                        <form method="post">
                            <input type="hidden" name="AccountId" value="@student.Id" />

                            @* <td>@student.FirstName @student.LastName</td> *@
                        <td>@student.Email</td>
                        <td>@student.CreatedAt.ToString("yyyy-MM-dd")</td>

                        <!-- Use System ID / Manual ID -->
                        <td>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input use-system-radio" type="radio" name="UseSystemId" value="true" checked>
                                <label class="form-check-label">System</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input use-system-radio" type="radio" name="UseSystemId" value="false">
                                <label class="form-check-label">Manual</label>
                            </div>
                        </td>

                        <!-- Student ID -->
                        <td>
                            <input type="text" name="ManualStudentId" class="form-control student-id-input" placeholder="Enter ID..." readonly />
                        </td>

                        <!-- Batch Number -->
                        <td>
                            <input type="text" name="BatchNumber" class="form-control" placeholder="Batch Number" />
                        </td>

                        <!-- Section -->
                        <td>
                            <input type="text" name="Section" class="form-control" placeholder="Section" />
                        </td>

                        <!-- Department -->
                        <td>
                            <select name="DepartmentId" class="form-select">
                                <option value="">Select Department</option>
                                @foreach (var dept in Model.Departments)
                                {
                                    <option value="@dept.Id">@dept.Name</option>
                                }
                            </select>
                        </td>

                        <td>
                            <button type="submit" class="btn btn-sm btn-primary">🆔 Assign</button>
                        </td>
                        </form>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Pagination -->
        <nav>
            <ul class="pagination">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="?CurrentPage=@(Model.CurrentPage - 1)&SearchTerm=@Model.SearchTerm">Previous</a>
                </li>
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" href="?CurrentPage=@i&SearchTerm=@Model.SearchTerm">@i</a>
                    </li>
                }
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="?CurrentPage=@(Model.CurrentPage + 1)&SearchTerm=@Model.SearchTerm">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>

@section Scripts {
    <script>
        // Enable/disable Student ID input based on System/Manual selection
               document.querySelectorAll('input.use-system-radio').forEach(radio => {
            radio.addEventListener('change', () => {
                // Find the closest row
                const row = radio.closest('tr');
                if (!row) return;

                // Find the student ID textbox in the same row
                const studentIdInput = row.querySelector('.student-id-input');
                if (!studentIdInput) return;

                // Toggle readonly based on radio value
                if (radio.value === 'true') {
                    studentIdInput.readOnly = true;
                    studentIdInput.value = '';
                } else {
                    studentIdInput.readOnly = false;
                    studentIdInput.focus();
                }
            });
        });

    </script>
}
