@page
@model UniPortal.Pages.Admin.SubjectsModel
@{
    ViewData["Title"] = "Subject Management";
    Layout = "_AdminLayout";
}

<div class="container my-4">
    <h2 class="mb-4">📚 Subject Management</h2>

    <!-- Search Box -->
    <form method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search by subject code or name..." />
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    <!-- Add New Subject -->
    <form method="post">
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>New</td>
                    <td><input asp-for="NewSubject.Code" class="form-control" required /></td>
                    <td><input asp-for="NewSubject.Name" class="form-control" required /></td>
                    <td>
                        <button type="submit" asp-page-handler="Create" class="btn btn-success btn-sm">Add</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>

    <!-- Existing Subjects Table -->
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subj in Model.Subjects)
            {
                <tr>
                    <form method="post">
                        <input type="hidden" name="id" value="@subj.Id" />

                        @if (Model.EditSubjectId == subj.Id.ToString())
                        {
                            <!-- Editing Row -->
                        <td><input name="EditSubject.Code" value="@Model.EditSubject.Code" class="form-control" /></td>
                        <td><input name="EditSubject.Name" value="@Model.EditSubject.Name" class="form-control" /></td>
                        <td>
                            <button type="submit" asp-page-handler="SaveEdit" class="btn btn-sm btn-primary">💾 Save</button>
                            <button type="submit" asp-page-handler="CancelEdit" class="btn btn-sm btn-secondary">❌ Cancel</button>
                        </td>
                    }
                    else
                    {
                        <!-- Normal Row -->
                        <td>@subj.Code</td>
                        <td>@subj.Name</td>
                        <td>
                            <button type="submit" asp-page-handler="Edit" name="id" value="@subj.Id" class="btn btn-sm btn-warning">Edit</button>
                            @if (!subj.IsDeleted)
                            {
                                <button type="submit" asp-page-handler="Delete" name="id" value="@subj.Id" class="btn btn-sm btn-danger">Delete</button>
                            }
                            else
                            {
                                <button type="submit" asp-page-handler="Activate" name="id" value="@subj.Id" class="btn btn-sm btn-success">Activate</button>
                            }
                        </td>
                    }
                    </form>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination -->
    <nav>
        <ul class="pagination">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="?CurrentPage=@(Model.CurrentPage - 1)&SearchTerm=@Model.SearchTerm">Previous</a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="?CurrentPage=@i&SearchTerm=@Model.SearchTerm">@i</a>
                </li>
            }
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="?CurrentPage=@(Model.CurrentPage + 1)&SearchTerm=@Model.SearchTerm">Next</a>
            </li>
        </ul>
    </nav>
</div>
