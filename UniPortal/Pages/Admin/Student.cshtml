@page
@model UniPortal.Pages.Admin.StudentModel
@{
    ViewData["Title"] = "Students";
    Layout = "_AdminLayout";
}

<h3>Students</h3>

<table class="table table-striped table-hover mt-3">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Dept</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Signup Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model.ActiveStudents)
        {
            <tr>
                <td>@student.Student?.StudentId</td>
                <td>@student.FirstName @student.LastName</td>
                <td>@student.Student?.Department?.Code</td>
                <td>@student.Email</td>
                <td>@student.Phone</td>
                <td>@student.CreatedAt.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
</table>
