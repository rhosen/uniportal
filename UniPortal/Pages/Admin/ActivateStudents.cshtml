@page
@model UniPortal.Pages.Admin.ActivateStudentsModel
@{
    ViewData["Title"] = "Activate Students";
    Layout = "_AdminLayout";
}

<h3>Pending Student Activations</h3>

@if (!Model.InactiveStudents.Any())
{
    <p class="text-muted">No pending students for activation.</p>
}
else
{
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Signup Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.InactiveStudents)
            {
                <tr>
                    <td>@student.FirstName @student.LastName</td>
                    <td>@student.Email</td>
                    <td>@student.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>
                        <form method="post">
                            <input type="hidden" name="studentId" value="@student.Id" />
                            <button type="submit" class="btn btn-sm btn-success">Activate</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
