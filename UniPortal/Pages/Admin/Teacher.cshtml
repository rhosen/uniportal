@page
@model UniPortal.Pages.Admin.TeacherModel
@{
    ViewData["Title"] = "Teacher Management";
    Layout = "_AdminLayout";
}

<div class="container my-4">
    <h2 class="mb-4">👨‍🏫 Teacher Management</h2>

    <!-- Search Box -->
    <form method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search by name or email..." />
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    <!-- Add New Teacher Form -->
    <form method="post">
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>New</td>
                    <td><input asp-for="NewTeacher.FirstName" class="form-control" required /></td>
                    <td><input asp-for="NewTeacher.LastName" class="form-control" required /></td>
                    <td><input asp-for="NewTeacher.Email" class="form-control" required /></td>
                    <td>
                        <button type="submit" asp-page-handler="Create" class="btn btn-success btn-sm">Add</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>

    <!-- Existing Teachers Table -->
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>ID</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacher in Model.Teachers)
            {
                <tr>
                    <form method="post">
                        <input type="hidden" name="id" value="@teacher.Id" />

                        @if (Model.EditTeacherId == teacher.Id.ToString())
                        {
                            <!-- Editing Row -->
                        <td><input name="EditTeacher.FirstName" value="@Model.EditTeacher.FirstName" class="form-control" /></td>
                        <td><input name="EditTeacher.LastName" value="@Model.EditTeacher.LastName" class="form-control" /></td>
                        <td><input name="EditTeacher.Email" value="@Model.EditTeacher.Email" class="form-control" /></td>
                        <td>@(teacher.IsActive ? "Active" : "Inactive")</td>
                        <td>
                            <button type="submit" asp-page-handler="SaveEdit" class="btn btn-sm btn-primary">💾 Save</button>
                            <button type="submit" asp-page-handler="CancelEdit" class="btn btn-sm btn-secondary">❌ Cancel</button>
                        </td>
                    }
                    else
                    {
                        <!-- Normal Row -->
                        <td>@teacher.FirstName</td>
                        <td>@teacher.LastName</td>
                        <td>@teacher.Email</td>
                        <td>@(teacher.IsActive ? "Active" : "Inactive")</td>
                        <td>
                            <button type="submit" asp-page-handler="Edit" name="id" value="@teacher.Id" class="btn btn-sm btn-warning">Edit</button>
                            @if (teacher.IsActive)
                            {
                                <button type="submit" asp-page-handler="Delete" name="id" value="@teacher.Id" class="btn btn-sm btn-danger">Delete</button>
                            }
                            else
                            {
                                <button type="submit" asp-page-handler="Activate" name="id" value="@teacher.Id" class="btn btn-sm btn-success">Activate</button>
                            }
                        </td>
                    }
                    </form>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination -->
    <nav>
        <ul class="pagination">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="?CurrentPage=@(Model.CurrentPage - 1)&SearchTerm=@Model.SearchTerm">Previous</a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="?CurrentPage=@i&SearchTerm=@Model.SearchTerm">@i</a>
                </li>
            }
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="?CurrentPage=@(Model.CurrentPage + 1)&SearchTerm=@Model.SearchTerm">Next</a>
            </li>
        </ul>
    </nav>
</div>
