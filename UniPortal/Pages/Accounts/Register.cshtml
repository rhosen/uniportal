@page
@model UniPortal.Pages.Accounts.RegisterModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-lg-5 d-flex align-items-center justify-content-center">
    <div class="col-12 col-sm-10 col-md-10 col-lg-8 col-xl-6">
        <div class="row shadow rounded-4 overflow-hidden bg-white">

            <!-- Left Panel: Illustration & Welcome (hidden on mobile) -->
            <div class="col-md-6 d-none d-md-flex bg-primary align-items-center justify-content-center">
                <div class="text-white text-center px-4">
                    <img src="~/img/undraw_sign-up_qamz.svg" alt="Register Illustration" class="img-fluid mb-4" style="max-height: 260px;" />
                    <h2 class="fw-bold">Join UniPortal</h2>
                    <p class="small">Create your account</p>
                </div>
            </div>

            <!-- Right Panel: Registration Form -->
            <div class="col-12 col-md-6 p-4 p-md-5 d-flex align-items-center">
                <div class="w-100">
                    <div class="text-center mb-4">
                        <h3 class="fw-bold text-primary">UniPortal</h3>
                        <p class="text-muted small">Student Registration</p>
                    </div>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div>@error.ErrorMessage</div>
                            }
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @* Show activation message with OK button after successful registration *@
                    @if (Model.RegistrationSucceeded)
                    {
                        <div id="activationMessage" class="alert alert-info text-center">
                            <p><strong>Thank you for registering!</strong></p>
                            <p>Your account has been created but is pending activation.</p>
                            <p>Once an administrator approves your account, you’ll be able to log in.</p>
                            <button id="okButton" class="btn btn-primary btn-sm mt-3">OK</button>
                        </div>
                    }

                    @* Only render the form if registration NOT succeeded *@
                    @if (!Model.RegistrationSucceeded)
                    {
                        <form method="post">
                            <div class="mb-3">
                                <label asp-for="Input.Email" class="form-label fw-semibold"></label>
                                <input asp-for="Input.Email" class="form-control form-control-sm rounded-3" placeholder="Enter your email" />
                                <span asp-validation-for="Input.Email" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Input.Password" class="form-label fw-semibold"></label>
                                <input asp-for="Input.Password" type="password" class="form-control form-control-sm rounded-3" placeholder="Enter password" />
                                <span asp-validation-for="Input.Password" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Input.ConfirmPassword" class="form-label fw-semibold"></label>
                                <input asp-for="Input.ConfirmPassword" type="password" class="form-control form-control-sm rounded-3" placeholder="Confirm password" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 fw-semibold btn-sm">
                                Register
                            </button>

                            <div class="text-center mt-3 small">
                                Already have an account?
                                <a asp-page="/accounts/login" class="text-decoration-none fw-semibold">Login</a>
                            </div>
                        </form>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var okBtn = document.getElementById("okButton");
            if (okBtn) {
                okBtn.addEventListener("click", function () {
                    window.location.href = "/accounts/login";
                });
            }
        });
    </script>
}
