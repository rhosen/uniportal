@page
@model UniPortal.Pages.Users.AdminModel
@{
    ViewData["Title"] = "Root";
    Layout = "_AdminLayout";
}

<div class="container my-4">
    <h2 class="mb-4">👨‍💼 Admin Management</h2>

    <!-- Search Box -->
    <form method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search by name or email..." />
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    <!-- Add New Admin Form -->
    <form method="post">
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>New</td>
                    <td><input asp-for="NewAdmin.FirstName" class="form-control" required /></td>
                    <td><input asp-for="NewAdmin.LastName" class="form-control" required /></td>
                    <td><input asp-for="NewAdmin.Email" class="form-control" required /></td>
                    <td>
                        <button type="submit" asp-page-handler="Create" class="btn btn-success btn-sm">Add</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>

    <!-- Existing Admins Table -->
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var admin in Model.Admins)
            {
                <tr>
                    <form method="post">
                        <input type="hidden" name="id" value="@admin.Id" />
                        @if (Model.EditAdminId == admin.Id.ToString())
                        {
                        <td><input name="EditAdmin.FirstName" value="@Model.EditAdmin.FirstName" class="form-control" /></td>
                        <td><input name="EditAdmin.LastName" value="@Model.EditAdmin.LastName" class="form-control" /></td>
                        <td><input name="EditAdmin.Email" value="@Model.EditAdmin.Email" class="form-control" /></td>
                        <td>
                            <button type="submit" asp-page-handler="SaveEdit" class="btn btn-sm btn-primary">💾 Save</button>
                            <button type="submit" asp-page-handler="CancelEdit" class="btn btn-sm btn-secondary">❌ Cancel</button>
                        </td>
                    }
                    else
                    {
                        <td>@admin.FirstName</td>
                        <td>@admin.LastName</td>
                        <td>@admin.Email</td>
                        <td>
                            <button type="submit" asp-page-handler="Edit" name="id" value="@admin.Id" class="btn btn-sm btn-warning">Edit</button>
                            @if (admin.IsActive)
                            {
                                <button type="submit" asp-page-handler="Delete" name="id" value="@admin.Id" class="btn btn-sm btn-danger">Delete</button>
                            }
                            else
                            {
                                <button type="submit" asp-page-handler="Activate" name="id" value="@admin.Id" class="btn btn-sm btn-success">Activate</button>
                            }
                            <a href="/accounts/profile?id=@admin.Id" class="btn btn-sm btn-info"> Details</a>
                        </td>
                    }
                    </form>
                </tr>
            }
        </tbody>
    </table>
</div>
