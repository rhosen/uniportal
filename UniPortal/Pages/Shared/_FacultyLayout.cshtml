@using Microsoft.AspNetCore.Http
@{
    var fullName = User.Identity?.Name ?? "Faculty";
    var initials = string.Join("", fullName.Split(" ").Select(n => n[0])).ToUpper();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UniPortal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light">

    <!-- Faculty Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm mb-4">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-page="/Faculty/Dashboard">UniPortal</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#facultyNavbar"
                    aria-controls="facultyNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="facultyNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-page="/Faculty/Courses">Courses</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Faculty/Assignments">Assignments</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Faculty/Notes">Notes</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Faculty/Grades">Grades</a></li>
                    @* <li class="nav-item"><a class="nav-link" asp-page="/Faculty/Attendance">Attendance</a></li> *@
                    <li class="nav-item"><a class="nav-link" asp-page="/Faculty/Notifications">Notifications</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Faculty/Enrollments">Enrollments</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Faculty/ClassSchedule">Class Schedule</a></li>
                </ul>

                <div class="d-flex align-items-center ms-auto">
                    <span class="me-3">Welcome, <strong>@fullName</strong></span>
                    <span class="badge bg-primary me-2">Faculty</span>
                    <form method="post" asp-page="/Account/Logout">
                        <button type="submit" class="btn btn-outline-danger btn-sm">Logout</button>
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container px-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer mt-auto py-3 bg-light fixed-bottom border-top">
        <div class="container text-center text-muted">
            &copy; 2025 UniPortal
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
